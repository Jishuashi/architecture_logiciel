<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/update.css" rel="stylesheet" type="text/css">
    <title>TODO App</title>
</head>
<body>
    <header class="header">
        <div class="divNav">
            <nav class="navbar">
                <div class="rightNav">
                    <a class="link" href="/">Acceuil</a>
                    <a class="link" href="/list">List Todo</a>
                    <a class="link" href="/create">Créé Todo</a>
                    <a class="link" href="/delete">Supprimer Todo</a>
                    <a class="link" href="/update">Mise à jour Todo</a>
                </div>  
            </nav>
        </div>
    </header>
    <main class="main">
        <form method="POST" action="/update">
            <select name="task">
              <% tasks.forEach(function(task) { %>
                <option value="<%= task.id %>"><%= task.id %> : <%= task.task %></option>
              <% }); %>
            </select>
            <button type="submit">Submit</button>
          </form>
    </main>
</body>
</html>